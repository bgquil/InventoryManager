<%include ../partials/header.ejs %>


<main class="container">

<div class="container">
<div class="data-table">
    <table class="table table-striped">
        <thead class="thead-inverse">
            <tr>
                <th>#</th>
                <th>OrderID</th>
                <th>Quantity</th>
                <th>Time</th>
                <th>Status</th> 
                <th></th>

            </tr>
        </thead>

        <tbody id="items_table_body">
            <% if(orderData.length){
                for (var i = 0; i < orderData.length; i++) { %>
                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=orderData[i].orderID%></td>
                    <td><%=orderData[i].totalQuantity%></td>
                    <td><%=orderData[i].orderTime%></td>
                    <%if (orderData[i].orderFulfilled === 1) { %>
                        <td>Fulfilled</td>
                    <% } else {%>
                        <td>Open</td>
                    <% }%>
                    <td>
                        <a href="/orders/view/<%=orderData[i].orderID%>" button class="btn btn-primary">View Order</button> 
                    </td>
                </tr>

                <%  }
            }else{ %>

            <% } %>
            </tbody>

    </table>
</div>
</div>
</main>

<%include ../partials/footer.ejs %>