<%include ../partials/header %>

<div class="container">
    <div class="py5 text-center">
    <% 
    const manufacturerName = manufacturerData[0].manufacturerName;
    const numItems = itemData.length;
    %>
    <h1><%=manufacturerName%></h1>
    <h2>Total Items: <%=numItems%></h2>
        <div class="col-md-2 order-md-2 mb-4"></div>
        <div class = "data-table">
            <table class ="table table-striped" id="table_items">
                <thead class="thead-inverse">
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>Manufacturer</th>
                        <th>Name</th>
                        <th>Model</th>
                        <th>Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="items_table_body">
                <% if(itemData.length){
                    for (var i = 0; i < itemData.length; i++) { %>
                    <tr>
                        <td><%=(i+1)%></td>
                        <td><%=itemData[i].itemID%></td>
                        <td><%=manufacturerName%></td>
                        <td><%=itemData[i].name%></td>
                        <td><%=itemData[i].model%></td>
                        <td><%=itemData[i].quantity%></td>
                        <td>
                            <a class="a-inside edit" href="/items/edit/<%=itemData[i].itemID %>">Edit</a>
                            <a class="a-inside edit" href="/items/delete/<%=itemData[i].itemID %>">Delete</a>
                        </td>
                    </tr>

                    <%  }
                }else{ %>
                    <tr><td>No Items Found</td></tr>
                <% } %>
                </tbody>
            </table>
        </div>
            </div>
        </div>

</div>


<%include ../partials/footer %>