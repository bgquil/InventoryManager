<%include ../partials/header %>


<div class="container">
    
    <form method="POST" action="/items/delete/<%=itemData[0].itemID%>">
      <div class="form-group">
        <label for="itemID">Item ID</label>
        <input type="text" class="form-control" id="manufacturer" value="<%=itemData[0].itemID%>" name="itemID" readonly>
      </div>
      <div class="form-group">
        <label for="manufacturer">Manufacturer</label>
        <input type="text" class="form-control" id="manufacturer" value="<%=itemData[0].manufacturerName%>" name="manufacturer" readonly>
      </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" value="<%=itemData[0].name%>" name="name" readonly>
      </div>
        <div class="form-group">
        <label for="model">Model</label>
        <input type="text" class="form-control" id="model" value="<%=itemData[0].model%>" name="model" readonly>
        </div>
      <div class="form-group">
        <label for="weight">Weight</label>
        <input type="text" class="form-control" id="weight" value="<%=itemData[0].weight%>" name="weight" readonly>
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" id="price" value="<%=itemData[0].price%>" name="price" readonly>
      </div>        
      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="text" class="form-control" id="quantity" value="<%=itemData[0].quantity%>" name="quantity" readonly>
      </div>
      <input type="submit" value="Delete Item" class="btn btn-danger float-right">
      <a class="btn btn-secondary float-left" href="/items">Cancel</a>
    </div> 
    </div>
    </div>
    <br>
<%include ../partials/footer %>